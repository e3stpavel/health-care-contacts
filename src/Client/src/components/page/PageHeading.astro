---
interface Props {
  title: string
  leadingLabel?: string
  trailingLabel?: string
}

const { title, leadingLabel, trailingLabel } = Astro.props

const LabelTag = 'span'
const labelAttrs = {
  class: 'text-sm text-gray-600 leading-6 tracking-wide',
}

---

<header>
  <div class="mx-auto max-w-7xl px-4 py-16 lg:px-8 sm:px-6">
    <div class="mx-auto max-w-2xl flex flex-wrap items-center justify-between gap-8 lg:(mx-0 max-w-none)">
      <div class="flex flex-col space-y-1">
        { leadingLabel && <LabelTag {...labelAttrs}>{ leadingLabel }</LabelTag> }
        <h1 class="text-2xl text-gray-900 font-semibold leading-9">{ title }</h1>
        { trailingLabel && <LabelTag {...labelAttrs}>{ trailingLabel }</LabelTag> }
      </div>
      <div class="flex items-center gap-x-4 sm:gap-x-6">
        <slot />
      </div>
    </div>
  </div>
</header>
