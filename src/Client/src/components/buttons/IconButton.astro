---
interface Props {
  label: string
  icon: string
  style?: 'ghost' | 'secondary'
}

const { label, icon, style = 'secondary' } = Astro.props

---

<button type="button" class:list={['inline-flex items-center justify-center rounded-md p-2 text-gray-700', { 'bg-transparent': style === 'ghost' }]} aria-label={label}>
  <span class:list={['size-6', icon]} />
</button>
