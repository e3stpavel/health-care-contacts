---
// TODO: other states like danger, warning etc
interface Props {
  label: string
  icon: string
}

const { label, icon } = Astro.props

---

<div class="bg-green-50 p-4 -mx-4 md:(mx-0 mt-4 rounded-md) sm:(px-6 -mx-6)">
  <div class="flex">
    <div class="flex-shrink-0">
      <span
        class:list={[
          icon,
          'block size-5 text-green-400',
        ]}
        aria-hidden="true"
      />
    </div>
    <div class="ml-3 flex-1">
      <p class="text-sm text-green-700 tracking-wide">{ label }</p>
    </div>
  </div>
</div>
